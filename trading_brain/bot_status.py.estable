def obtener_precio(par):
    """Obtiene precio desde Binance API"""
    try:
        url = f"https://api.binance.com/api/v3/ticker/price?symbol={par}"
        response = requests.get(url, timeout=5)
        if response.status_code == 200:
            data = response.json()
            return float(data['price'])
        return None
    except:
        return None

